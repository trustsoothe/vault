{
  "name": "@soothe/extension",
  "version": "0.1.4",
  "description": "Soothe Vault: browser web extension app for Firefox and Chromium based browsers to manage EVM, Cosmos and Pocket based wallets",
  "main": "build/lavamoat/build.js",
  "scripts": {
    "dev": "webpack --config build/webpack/webpack.dev.js --watch",
    "dev:firefox": "BROWSER=Firefox webpack --config build/webpack/webpack.dev.js --watch",
    "build": "yarn build:chromium",
    "build:autopolicy": "yarn build:autopolicy:chromium",
    "build:chromium": "NODE_ENV=production node -r dotenv/config build/lavamoat/build.js && webpack --config build/webpack/chromium.prod.js",
    "build:firefox": "BROWSER=Firefox webpack --config build/webpack/firefox.prod.js",
    "build:autopolicy:firefox": "LAVAMOAT_AUTO_POLICY=true BROWSER=Firefox webpack --config build/webpack/firefox.prod.js",
    "build:autopolicy:chromium": "LAVAMOAT_AUTO_POLICY=true NODE_ENV=production node -r dotenv/config build/lavamoat/build.js && webpack --config build/webpack/chromium.prod.js",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && rm -f tsconfig.tsbuildinfo",
    "clean:dist": "rm -rf dist",
    "release:chromium": "yarn clean:dist && yarn build:chromium && mkdir -p releases && cd dist && zip -r ../releases/soothe-vault-chromium-$(jq .version ../package.json -r).zip *",
    "release:firefox": "yarn clean:dist && yarn build:firefox && mkdir -p releases && cd dist && zip -r ../releases/soothe-vault-firefox-$(jq .version ../package.json -r).zip *"
  },
  "repository": "git@github.com:trustsoothe/vault.git",
  "homepage": "https://trustsoothe.io",
  "bugs": {
    "url": "https://github.com/trustsoothe/vault/issues",
    "email": "support@trustsoothe.io"
  },
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@emotion/react": "11.11.1",
    "@emotion/styled": "11.11.0",
    "@mui/base": "5.0.0-beta.26",
    "@mui/icons-material": "5.14.11",
    "@mui/lab": "^5.0.0-alpha.146",
    "@mui/material": "5.14.11",
    "@reduxjs/toolkit": "2.0.1",
    "assert": "2.1.0",
    "browserify-zlib": "0.2.0",
    "buffer": "6.0.3",
    "crypto-browserify": "markhughes/crypto-browserify#feat/213-randomUUID",
    "decimal.js": "10.4.3",
    "encoding": "0.1.13",
    "ethereum-cryptography": "^2.0.0",
    "events": "3.3.0",
    "file-saver": "2.0.5",
    "https-browserify": "1.0.0",
    "isomorphic-crypto": "3.0.0",
    "lodash": "4.17.21",
    "net-browserify": "0.2.4",
    "notistack": "3.0.1",
    "os-browserify": "0.3.0",
    "querystring-es3": "0.2.1",
    "random-words": "2.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.45.0",
    "react-password-strength-bar": "0.4.1",
    "react-redux": "8.1.0",
