{
  "manifest_version": 3,
  "name": "Keyring Extension",
  "description": "Extension to manage your vault of wallets",
  "version": "0.0.1",
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "home.html?popup=true"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
