{
  "manifest_version": 3,
  "name": "Soothe Vault",
  "description": "Extension to manage your vault of wallets",
  "version": "0.0.1",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "home.html?popup=true"
  },
  "externally_connectable": {
    "ids": [],
    "matches": []
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/vendor.js",
        "js/proxy.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/provider.js"
      ],
      "world": "MAIN",
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
