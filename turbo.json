{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "cache": false,
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "build:chromium": {
      "cache": false,
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "build:firefox": {
      "cache": false,
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "build:autopolicy": {
      "cache": false,
      "dependsOn": [
        "^build:autopolicy"
      ],
      "inputs": [
        "src/**"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "release:chromium": {
      "cache": false,
      "inputs": [
        "src/**"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "release:firefox": {
      "cache": false,
      "inputs": [
        "src/**"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ]
    },
    "ci:test": {},
    "lint": {
      "cache": true
    },
    "lint:fix": {
      "cache": false
    },
    "typecheck": {
      "cache": false
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": [
    "CI_ENV"
  ]
}
